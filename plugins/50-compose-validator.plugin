# Name: Compose Validator
# Description: Validate master and included compose files
# Category: Diagnostics
# Version: 1.0.0
# Requires: docker compose

plugin_run() {
  MASTER_COMPOSE="${DOCKERDIR}/docker-compose.yml"

  clear
  echo "VALIDATING MASTER COMPOSE"
  echo
  docker compose -f "$MASTER_COMPOSE" config -q && echo "OK" || echo "ERROR"
  echo
  pause
}
