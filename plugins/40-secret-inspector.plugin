# Name: Secret Inspector
# Description: List secrets without exposing contents
# Category: Security
# Version: 1.0.0
# Requires: stat

plugin_run() {
  SEC_DIR="$DCOKERDIR}/docker/secrets"

  clear
  echo "SECRETS"
  echo

  for f in "$SEC_DIR"/*; do
    [ -f "$f" ] || continue
    echo "$(basename "$f") ($(stat -c%s "$f") bytes)"
  done

  echo
  pause
}
