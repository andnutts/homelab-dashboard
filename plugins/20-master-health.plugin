# Name: Master Health Dashboard
# Description: Show health of all services in master compose
# Category: Diagnostics
# Version: 1.0.0
# Requires: docker compose

plugin_run() {
  MASTER_COMPOSE="${DOCKERDIR}/docker-compose.yml"

  clear
  echo "MASTER COMPOSE HEALTH"
  echo
  docker compose -f "$MASTER_COMPOSE" ps
  echo
  pause
}
